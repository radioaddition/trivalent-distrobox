FROM ghcr.io/secureblue/securecore-main-hardened:latest

LABEL com.github.containers.toolbox="true" \
      usage="This image is meant to be used with the toolbox or distrobox command" \
      summary="An example ContainerFile to demonstrate multiple image builds." \
      maintainer="faeizmahrus@outlook.com"

# Copy the setup scripts and package list
COPY ../scripts/trivalent.sh /
COPY ../scripts/copr.sh /
COPY ../scripts/distrobox-shims.sh /
COPY ../packages/trivalent.packages /

# Run the setup scripts
RUN chmod +x trivalent.sh distrobox-shims.sh copr.sh && /trivalent.sh
RUN rm /trivalent.sh /distrobox-shims.sh /trivalent.packages
